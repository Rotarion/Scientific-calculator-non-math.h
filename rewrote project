        }
        else
        {
            cout << fixed << setprecision(2) << "The factorial of " << num1 << " is: " << fact(num1) << endl;
            cout << "This result is brought to you by the programmer Pablo Cabrera and tested by Redwan Ahmed.\n\n";
        }
}
